public class CarroTeste {
    public static void main(String[] args) {
        // Criando objetos da classe Carro
        Carro carro1 = new Carro("Toyota", "Corolla", 2022, "Prata");
        Carro carro2 = new Carro("Honda", "Civic", 2020, "Preto");

        // Exibindo informações dos carros
        System.out.println("Carro 1:");
        carro1.exibirInformacoes();

        System.out.println();

        System.out.println("Carro 2:");
        carro2.exibirInformacoes();

        // Modificando informações do carro
        carro1.setAno(2023);
        carro2.setModelo("Fit");

        // Exibindo informações dos carros após modificação
        System.out.println("\nCarro 1 após modificação:");
        carro1.exibirInformacoes();

        System.out.println("\nCarro 2 após modificação:");
        carro2.exibirInformacoes();
    }
}
