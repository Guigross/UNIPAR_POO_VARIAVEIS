import java.util.Scanner;

public class Produto {
    // Atributos privados
    private String nome;
    private double preco;
    private int quantidadeEmEstoque;

    // Construtor que aceita apenas o nome do produto
    public Produto(String nome) {
        this.nome = nome;
        this.preco = 0.0;
        this.quantidadeEmEstoque = 0;
    }

    // Construtor que aceita o nome e o preço do produto
    public Produto(String nome, double preco) {
        this.nome = nome;
        this.preco = preco;
        this.quantidadeEmEstoque = 0;
    }

    // Construtor que aceita o nome, o preço e a quantidade em estoque do produto
    public Produto(String nome, double preco, int quantidadeEmEstoque) {
        this.nome = nome;
        this.preco = preco;
        this.quantidadeEmEstoque = quantidadeEmEstoque;
    }

    // Método para exibir características do produto
    public void exibirCaracteristicas() {
        System.out.println("Nome: " + nome);
        System.out.println("Preço: R$ " + preco);
        System.out.println("Quantidade em Estoque: " + quantidadeEmEstoque);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Criação de objetos Produto utilizando diferentes construtores
        Produto produto1 = new Produto("Notebook");
        Produto produto2 = new Produto("Smartphone", 1500.0);
        Produto produto3 = new Produto("Tablet", 800.0, 10);

        // Exibição das características dos produtos criados
        System.out.println("Produto 1:");
        produto1.exibirCaracteristicas();

        System.out.println("\nProduto 2:");
        produto2.exibirCaracteristicas();

        System.out.println("\nProduto 3:");
        produto3.exibirCaracteristicas();

        scanner.close();
    }
}
