public class Main {
    public static void main(String[] args) {
        // Variáveis declaradas para armazenar informações sobre um aluno
        String nomeDoAluno = ""; // Variável para armazenar o nome do aluno (texto)
        int idadeDoAluno = 0; // Variável para armazenar a idade do aluno (inteiro)
        double notaDaProva1 = 0.0; // Variável para armazenar a nota da primeira prova (decimal)
        double notaDaProva2 = 0.0; // Variável para armazenar a nota da segunda prova (decimal)
        double mediaFinal = 0.0; // Variável para armazenar a média final das notas (decimal)

        // Exemplo de uso
        nomeDoAluno = "João";
        idadeDoAluno = 20;
        notaDaProva1 = 7.5;
        notaDaProva2 = 8.2;
        mediaFinal = (notaDaProva1 + notaDaProva2) / 2;

        // Exibir informações
        System.out.println("Nome do aluno: " + nomeDoAluno);
        System.out.println("Idade do aluno: " + idadeDoAluno);
        System.out.println("Nota da prova 1: " + notaDaProva1);
        System.out.println("Nota da prova 2: " + notaDaProva2);
        System.out.println("Média final: " + mediaFinal);
    }
}
